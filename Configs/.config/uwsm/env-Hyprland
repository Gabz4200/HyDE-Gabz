#!/usr/bin/env bash

export APP2UNIT_SLICES='a=app-graphical.slice b=background-graphical.slice s=session-graphical.slice'

export GDK_BACKEND='wayland,x11,*'
export SDL_VIDEODRIVER=wayland 
export CLUTTER_BACKEND=wayland

export XDG_CURRENT_DESKTOP=Hyprland
export XDG_SESSION_TYPE=wayland
export XDG_SESSION_DESKTOP=Hyprland

export QT_AUTO_SCREEN_SCALE_FACTOR=1
export QT_QPA_PLATFORM=wayland;xcb
export QT_WAYLAND_DISABLE_WINDOWDECORATION=1
export QT_QPA_PLATFORMTHEME=qt6ct

export MOZ_ENABLE_WAYLAND=1
export GDK_SCALE=1
export ELECTRON_OZONE_PLATFORM_HINT=auto

export XDG_RUNTIME_DIR=$XDG_RUNTIME_DIR

export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share

export GTK_THEME=Colloid-Pink-Dark-Catppuccin
export ICON_THEME=Colloid-Pink-Dark-Catppuccin
export COLOR_SCHEME=prefer-dark

export CURSOR_THEME=Bibata-Modern-Ice
export CURSOR_SIZE=24

export FONT=Canterell
export FONT_SIZE=10
export DOCUMENT_FONT=Cantarell
export DOCUMENT_FONT_SIZE=10
export MONOSPACE_FONT=CaskaydiaCove Nerd Font Mono
export MONOSPACE_FONT_SIZE=9
export FONT_ANTIALIASING=rgba
export FONT_HINTING=full

# HyDE

export HYDE_RUNTIME_DIR=XDG_RUNTIME_DIR/hyde
export HYDE_CONFIG_HOME=XDG_CONFIG_HOME/hyde
export HYDE_CACHE_HOME=XDG_CACHE_HOME/hyde
export HYDE_DATA_HOME=XDG_DATA_HOME/hyde
export HYDE_STATE_HOME=XDG_STATE_HOME/hyde

export PATH=$HOME/.local/bin:$HOME/.local/lib/hyde:$PATH

export HYPRCURSOR_THEME=$CURSOR_THEME
export HYPRCURSOR_SIZE=$CURSOR_SIZE
export XCURSOR_THEME=$CURSOR_THEME
export XCURSOR_SIZE=$CURSOR_SIZE